<% content_for :title do %>
	 <h1><%= t(".#{params[:controller].downcase}") %></h1>
<% end %>

<% content_for :pageMenu do %>
		<%= link_to new_resource_path, :class => "btn btn-inverse" do %>
			<i class="icon-plus">&nbsp;&nbsp;<%= t(".new_#{params[:controller].downcase}") %></i> 
		<% end %>
<% end %>

<div id="estimate_listing">
	<table cellspacing="0">
	  <!-- Table Header -->	
	  <thead>
		<tr>
		<th scope ="col" id="estimate_customer_name_header">Customer</th>
	    <th scope ="col" id="estimate_total_header">Total</th>
	    <th scope ="col" id="estimate_nb_days_header">Nb days</th>
		<th scope ="col" id="estimate_create_at_header">Created At</th>
		<th scope ="col" id="estimate_show_header">&nbsp;</th>
		<th scope ="col" id="estimate_edit_header">&nbsp;</th>
		<th scope ="col" id="estimate_delete_header">&nbsp;</th>
		</tr>
	  </thead>

	 <!-- Table Footer -->
	 <tfoot>
		<tr>
			<td colspan = "7">&nbsp;<%= paginate @resources %></td>
		</tr>
	</tfoot>
	
	<tbody>
	<% @resources.each do |res| %>
	  <tr>
		<td><%= res.customer_name %></td>
	    <td><%= res.total %></td>
	    <td><%= res.nb_days %></td>
		<td><%=l res.created_at %></td>
	    <td>
	    	<%= link_to resource_url(res, :format => :pdf) do %>
	    		<i class=" icon-print"></i>
	    	<% end %>
	    </td>
	    <td>
	    	<%= link_to edit_resource_url(res) do %>
	    		<i class="icon-tag"></i>
	    	<% end %>
	    </td>
	    <td>
	    	<%= link_to res, method: :delete, data: { confirm: 'Are you sure?' } do %>
	    		<i class="icon-remove"> </i>
	    	<% end %>
	    </td>
	  </tr>
	<% end %>
	</tbody>
	</table>
</div>
<p id="notice"><%= notice %></p>
<br />

