<%= nested_form_for(@worksite, :remote => true) do |f| %>
  <% if @worksite.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@worksite.errors.count, "error") %> prohibited this worksite from being saved:</h2>

      <ul>
      <% @worksite.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<%= f.hidden_field :estimate_id, :value => @worksite.estimate_id %>
  <div id="reason" class="field">
    <%= f.label :reason %><br />
    <%= f.text_field :reason %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div id="work_start" class="field">
    <%= f.label :work_start_on %><br />
    <%= f.text_field :work_start_on %>
  </div>
  <div id="work_end" class="field">
    <%= f.label :work_end_on %><br />
    <%= f.text_field :work_end_on %>
  </div>

  <%= f.fields_for :items do |item_field| %>
		<%= render "/worksites/item_fields", :f => item_field %>
  <% end %>

  <br style="clear: both;" />
  <p><%= f.link_to_add t('.add_a_material'), :items %></p>


  <div class="actions">
    <%# f.submit %>
  </div>
<% end %>
