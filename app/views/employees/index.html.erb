<% content_for :title do %>
	<%= link_to image_tag("maison_48.png", :title => "accueil"), account_home_index_path %>
<% end %>

<h1><%= t('.list_employees')%></h1>

<table>
  <tr>
    <th><%= t('.last_name') %></th>
    <th><%= t('.first_name') %></th>
    <th><%= t('.day_price') %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @employees.each do |employee| %>
  <tr>
    <td><%= employee.last_name %></td>
    <td><%= employee.first_name %></td>
    <td><%= employee.day_price %></td>
    <td><%= link_to t('show'), employee %></td>
    <td><%= link_to t('edit'), edit_employee_path(employee) %></td>
    <td><%= link_to t('destroy'), employee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

