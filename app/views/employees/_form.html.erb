  <div class="control-group">
    <%= f.label :first_name, :class => "control-label" %>
	<div class="controls">
    	<%= f.text_field :first_name %>
	</div>
  </div>

  <div class="control-group">
    <%= f.label :day_price, :class => "control-label" %>
	<div class="controls">
    	<%= f.text_field :day_price %>
	</div>
  </div>	

  <div class="control-group">
		<div class="controls">
			<%= f.submit :class => "btn btn-primary" %>
			<%= link_to t('back'), :back, :class => 'btn', :remote => true, :'data-dismiss' => "modal" %>
		</div>
  </div>
