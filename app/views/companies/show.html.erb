<% content_for :title do %>
	<%= link_to image_tag("maison_48.png", :title => "accueil"), account_home_index_path %>
<% end %>

<p id="notice"><%= notice %></p>

<p>
  <b>Siret:</b>
  <%= @company.siret %>
</p>

<p>
  <b>Name:</b>
  <%= @company.company_name %>
</p>

<p>
  <b>Logo:</b>
  <%= image_tag @company.logo_url.to_s if @company.logo_url %>	
</p>

<%= render "/addresses/address", :address => @company %>

<div class="comptes">
<ul>
<% @company.accounts.each do |account| %>
		<li><%= account.email %></li>
<% end %>
</ul>
</div>
<br />

<%= link_to 'Edit', edit_company_path(@company) %> |
<%= link_to 'Back', companies_path %>
