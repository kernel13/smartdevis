<div id="uploadModal" class="modal hide fade" role="dialog" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Upload image logo</h3>
  </div>
  <div class="modal-body">
    
			<%= form_for(:logo, 
						 :url => { :controller => "companies", :action => :update_logo }, 
						 :html => {:method => :post, :multipart => true, :remote => true }) do |f| %>		

		 		<%= f.file_field :logo %><a href="#" class="btn" data-dismiss="modal">Close</a>
				<%= f.submit "Save", :class => "btn btn-info" %>

			<% end %>

  </div>
  <div class="modal-footer">
	<!--
    <a href="#" class="btn" data-dismiss="modal">Close</a>
    <a href="#" class="btn btn-primary">Save changes</a>
	-->
  </div>
</div>