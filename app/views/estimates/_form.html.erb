<%= nested_form_for(@estimate) do |f| %>
  <% if @estimate.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@estimate.errors.count, "error") %> prohibited this estimate from being saved:</h2>

      <ul>
      <% @estimate.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<%= f.hidden_field :company_id, :value => @company.id, :id => :company_id %>

  <div class="span10">
	
	<div class="row">
		<div class="span6"><h1 class="title">Devis</h1></div>
		<div class="span4"><h4><%= @estimate.created_at.strftime("%A %d %B %Y") %></h4></div>
	</div>
	<br />
	<div class="row">
		<div class="span10">
			<% if @company.logo %>
				<%= image_tag @company.logo, :width => "200px;" %> 
			<% else %>
				<h1><%= @company.company_name %></h1>
			<% end %>
		</div>			
	</div>	
	<div class="row">						
	  	<div class="span5">
	  		<address>
			<%= @company.address.address_line1 %><br />
	 		<%= @company.address.address_line2 if @company.address.address_line2 %>
			<%= @company.address.postal_code %>, <%= @company.address.city %><br />
			<%= @company.address.email %> <br /> <br />
			</address>
	
			<span class="header">Telephone: </span> <%= @company.address.phone %> <br />
			<span class="header">Fax: </span> <%= @company.address.fax %>	<br />			
			<span class="header">Siret: </span> <%= @company.siret %> <br /><br />
			
			<h3>Référence: <%= @estimate.id %></h3>
		</div>	

		<div class="span5">
			<fieldset>
				<legend>
						<%= t('.customer') %>: <%= f.text_field :customer_name, :id => :customer_name %>
						<%= link_to new_customer_path, :remote => true do %>
							<i class="icon-plus-sign" title="Créer un nouveau client"></i>
						<% end %>								
				</legend>
				<%= f.hidden_field :customer_id, :id => :customer_id %>
				
				<address>					
					<%= @estimate.customer.address.address_line1 if @estimate.customer %><br />
					<%= @estimate.customer.address.address_line2 if @estimate.customer %><br />
					<%= @estimate.customer.address.postal_code if @estimate.customer %></span>,<span><%= @estimate.customer.address.city if @estimate.customer %>
					<br />
					<b>Telephone:</b><span id="phone"><%= @estimate.customer.address.phone if @estimate.customer %></span> <br />
					<b>Fax: </b> <span id="fax"><%= @estimate.customer.address.fax if @estimate.customer %></span>	<br />
					<b>EMail: </b> <span id="email"><%= @estimate.customer.address.email if @estimate.customer %></span> <br />
				</address>

			</fieldset>
		</div>		
	  </div>

	  	<!-- Worksites -->
		<div class="span10">
			<p><%= link_to "Add Worksite", new_worksite_url({:estimate => @estimate.id}), :remote => true %></p>
		
			<%# f.fields_for :worksites %>
		 	<p><%# f.link_to_add t('.add_a_worksite'), :worksites %></p>		
			<%# end %>
			
			<%= render @worksites %>
		</div>
	  
	   <br style="clear: both;">

	  <div style = "padding-left: 500px;">
	  	<div style = "float: right;">
	    	<%= f.label :total %>	
	    	<%= f.text_field :total %>
	  	</div>
		<br style="clear:both;">
	  	<div style = "float: right;">
	    	<%= f.submit %>
	  	</div>
	  </div>

	   <br style:"clear: both" />
		
	<% end %>

</div>

