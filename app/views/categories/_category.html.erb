<% if category.sub_categories.count > 0 %>
	<li class="node">	
		<%= category.name %> - 
			<%= link_to new_category_path(:parent_id => category.id) do %>
				<i class="icon-plus-sign"></i>
			<% end %>
			<%= link_to edit_category_path(category) do %>
				<i class="icon-info-sign"></i>
			<% end %>
			<%= link_to category, method: :delete, data: { confirm: 'Are you sure?' } do %>
				<i class="icon-remove-sign"></i>
			<% end %>
		<ul>
			<%= render :partial => '/categories/category', :collection => category.sub_categories, :as => :category if category.sub_categories.count > 0 %>
		</ul>
	</li>		
<% else %>
	<li class="leaf">
		<%= category.name %> -
			<%= link_to new_category_path(:parent_id => category.id) do %>
				<i class="icon-plus-sign"></i>
			<% end %>
			<%= link_to edit_category_path(category) do %>
				<i class="icon-info-sign"></i>
			<% end %>
			<%= link_to category,  method: :delete, data: { confirm: 'Are you sure?' } do %>
				<i class="icon-remove-sign"></i>
			<% end %>
	</li>
<% end %>
	