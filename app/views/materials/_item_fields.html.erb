<table>
	<% if f.object.id %>
	<tr type="material" id="material_<%= f.object.material_id %>">
	<% else %>
	<tr type = "material">
	<% end %>	
		<td class="material_name">
			<%# f.select :material_id, Material.all.collect {|m| [m.name, m.id] } %>
			<%= f.label :name %>
			<%= f.text_field :name, :class => "material_label" %>
			<%= f.hidden_field :material_id, :class => "material_value" %>
			<%= f.hidden_field :unit_priceTF, :class => "material_unit_price_tf" %>
		</td>
		<td  class="material_quantity" class="field">
   			<%= f.label :quantity %>
   			<%= f.text_field :quantity, :class => "material_quantity" %>
 		</td> 		
		<td class="material_tva" class="field">	
   			<%= f.label :tva %>
   			<%= f.text_field :tva, :class => "material_tva" %>
		</td>
		<td class="material_totalTF" class="field">	
   			<%= f.label :totalTF %>
   			<%= f.text_field :totalTF, :class => "material_totalTF uneditable-input" %>
   			<!-- <span class="input-mini uneditable-input"></span> -->
 		</td>
		<td><%= f.link_to_remove t('destroy')  %></td>
	</tr>
</table>